{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "subchart": {
            "$ref": "./bundleNestedSubschema.schema.json",
            "properties": {
                "replicas": {
                    "type": "integer"
                }
            },
            "type": "object"
        }
    },
    "$defs": {
        "bundleNestedSubschema.schema.json": {
            "$comment": "This subschema references some other schemas",
            "$id": "./bundleNestedSubschema.schema.json",
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "additionalProperties": false,
            "properties": {
                "image": {
                    "$ref": "./bundleSubschema.schema.json",
                    "type": null
                }
            },
            "type": "object"
        },
        "bundleSubschema.schema.json": {
            "$comment": "Sample schema referenced by other schemas. This file is meant to be manually created and not automatically generated",
            "$id": "./bundleSubschema.schema.json",
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "additionalProperties": false,
            "properties": {
                "pullPolicy": {
                    "description": "This sets the pull policy for images.",
                    "enum": ["IfNotPresent", "Always", "Never"],
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "description": "Overrides the image tag whose default is the chart appVersion.",
                    "type": ["string", "null"]
                }
            },
            "type": "object"
        }
    }
}
