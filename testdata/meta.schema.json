{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "fullnameOverride": {
            "title": "Full name override",
            "type": "string"
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "default": "nginx",
                    "type": "string"
                },
                "tag": {
                    "readOnly": true,
                    "type": "string"
                }
            }
        },
        "metrics": {
            "type": "object",
            "properties": {
                "enabled": {
                    "default": true,
                    "type": "boolean"
                }
            }
        },
        "nodeSelector": {
            "default": {
                "cloud.google.com/gke-nodepool": "e2-standard-8-spot"
            },
            "type": "object"
        },
        "replicas": {
            "default": 2,
            "type": "integer"
        },
        "tolerations": {
            "default": [
                {
                    "effect": "NoSchedule",
                    "key": "foo",
                    "operator": "Equal",
                    "value": "bar"
                }
            ],
            "type": "array"
        }
    }
}
